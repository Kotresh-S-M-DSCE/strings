class Solution {
    public int lengthOfLastWord(String s) {
        int count=0,flag=0,i=s.length()-1;
        while(i>=0)
        {
            while(count==0&&!Character.isLetter(s.charAt(i)))
            {
                i-=1;
            }
            if(s.charAt(i)==' ')
               return count;
            count+=1;
            i-=1;
        }
        return count;
    }
}